{
    "title": "Add output",
    "description": "Add an output to your component.",
    "type":"object",
    "properties": {
        "name": {
            "type":"string",
            "description":"the name of the output"
        },
        "type": {
            "type":"string",
            "description":"select if the output is pattern based or input reference",
            "enum":["pattern", "reference"]
        }
    },
    "allOf":[
        {
            "if":{
                "properties":{
                    "type":{
                        "const":"pattern"
                    }
                }
            },
            "then":{
                "properties":{
                    "class":{
                        "type":"string",
                        "description":"pick the class of the output",
                        "enum":[
                            "File",
                            "Directory",
                            "FileArray",
                            "DirectoryArray"
                        ]
                    },
                    "pattern":{
                        "type":"string",
                        "description":"enter the lookup pattern"
                    }
                },
                "required":["class","pattern"]
            }
        },
        {
            "if":{
                "properties":{
                    "type":{
                        "const":"reference"
                    }
                }
            },
            "then":{
                "properties":{
                    "reference":{
                        "type":"string",
                        "description":"pick the input source for this output",
                        "enum":[]
                    }
                },
                "required":["reference"]
            }
        },
        {"required":["name","type"]}
    ]
}